<form method='post'>
  <label for='post-title'>Title:</label>
  <input type='text' id='post-title' name='post-title' /><br /><br />
  <label for='post-image'>Image Link:</label>
  <input type='text' id='post-image' name='post-image' /><br /><br />
  <label for='post-body'>Write your post here:</label>
  <textarea name='post-body' id='post-body' cols='30' rows='10'></textarea>
  <input type='submit' value='Submit' />
</form>